.container {
    height: 100%;
    padding: 0 8px;
}
.topic {
    border-bottom: 1px solid #eee;
    padding: 8px 4px;
    display: flex;
}
.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.topic-info {
    flex: 1;
}
.topic-title {
    margin-bottom: 15rpx;
    font-size: 36rpx;
}
.topic-desc {
    font-size: 30rpx;
}
.node-name {
    background: #e2e2e2;
    padding: 6rpx 10rpx;
    border-radius: 8rpx;
    margin-right: 20rpx;
}