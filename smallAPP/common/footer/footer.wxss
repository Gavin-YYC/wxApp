.footer {
    width: 100%;
    height: 100rpx;
    background: red;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fafafa;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-items: center;
}
.footer .item {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}
.footer .item .img {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
}
.footer .item .name {
    font-size: 26rpx;
}